generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Curso {
  codigo               String               @id
  proyeccionesSemestre ProyeccionSemestre[]
}

model ProyeccionSemestre {
  id                Int             @id @default(autoincrement())
  cursos            Curso[]
  semestre          String
  proyeccionTotal   ProyeccionTotal @relation(fields: [proyeccionTotalId], references: [id])
  proyeccionTotalId Int
}

model ProyeccionTotal {
  id                    Int                  @id @default(autoincrement())
  proyeccionesSemestres ProyeccionSemestre[]
  estudianteRut         String
  carreraCodigo         String
}
